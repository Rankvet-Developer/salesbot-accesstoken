{
    "compilerOptions": {
        "experimentalDecorators": true,
        "target": "ES2019",
        "module": "CommonJS",
        "rootDir": "src",
        "allowJs": true,
        "outDir": "dist",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "strictBindCallApply": true,
        "skipLibCheck": true,
        "resolveJsonModule": true
    },
    "include": ["src/**/*"]
}
